<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/128x128.png" alt="user picture">
            </p>
        </figure>
        <div class="media-content">
            <%= render 'form' %>
        </div>
    </article>

<% @thoughts.each do |thought| %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png" alt="user picture">
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong>Defaul name</strong> <br>
                    <small>@defaultpage</small> <br>
                    <p> <%= thought.thought %> </p>
                </div>
            </div>
        </article>
    </div>

<% end %>

</div>
<%= simple_form_for(@thought) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :thought, label: "What are you thinking?", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Write your thoughts..." %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info"%>
<% end %>
